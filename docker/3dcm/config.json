{
  "pipeline": {
    "num_threads": 8,
    "use_gpu": true,
    "undistort_max_image_size": 2048,
    "birefnet_model": "ckpt/BiRefNet-general-epoch_244.pth",
    "yolo_model": "ckpt/best.pt"
  },
  "feature_extraction": {
    "single_camera": 1,
    "camera_model": "OPENCV",
    "max_image_size": 4096,
    "peak_threshold": 0.006,
    "edge_threshold": 10,
    "max_num_features": 16384
  },
  "exhaustive_matcher": {
    "max_ratio": 0.8,
    "max_distance": 0.7,
    "max_error": 4.0,
    "min_num_inliers": 30
  },
  "sparse_reconstruction": {
    "init_min_num_inliers": 100,
    "min_num_matches": 50,
    "abs_pose_min_num_inliers": 30,
    "abs_pose_max_error": 8.0,
    "min_focal_length_ratio": 0.1,
    "max_focal_length_ratio": 10.0,
    "max_extra_param": 1.0,
    "ba_global_max_num_iterations": 50,
    "ba_global_points_ratio": 1.1,
    "ba_global_function_tolerance": 0.000001,
    "tri_min_angle": 1.5,
    "tri_merge_max_reproj_error": 4.0,
    "filter_max_reproj_error": 4.0,
    "filter_min_tri_angle": 1.5
  },
  "yolo_detection": {
    "confidence": 0.9,
    "iou_threshold": 0.7,
    "imgsz": 640,
    "classes": [
      1
    ]
  },
  "pc_3d_algos": {
    "ransac_threshold": 0.01,
    "max_iterations": 1000,
    "min_samples": 3,
    "nb_neighbors": 30,
    "std_ratio": 1.0,
    "gaussian_sigma": 0.2,
    "norm_color_gt": 0.12,
    "target_normal": [
      0,
      0,
      -1
    ],
    "calib_side_cm": 4.0,
    "calibration": {
      "expr": "2.4 * r - 3 * g + b",
      "threshold_gt": 0.8
    },
    "phenotype": {
      "expr": "3 * g - 2.4 * r - b",
      "threshold_gt": 0.0
    }
  }
}